<div class="container" ng-controller="ServiceChargeCtrl">
    <div class="container container-fluid">
        <h2 class="text-justify font-weight-bold h-100 d-inline-block">Service Charges</h2>
    </div>
    <div>
        <a href="" ng-click="showCreate()" class="btn btn-primary">Create New Service Charge</a>
    </div>
    <form ng-show="showCreate">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Name/Type of the Service Charge" ng-model="serviceCharge.Name" required />
        </div>
        <div class="form-group">
            <label>Amount</label>
            <input type="text" class="form-control" placeholder="Amount to be paid" ng-model="serviceCharge.Amount" required />
        </div>
        <div class="form-group">
            <label>Is it compulsory?</label>
            <select class="form-control" required>
                <option>--select--</option>
                <option>Yes</option>
                <option>No</option>
            </select>
        </div>
        <div class="form-group">
            <label>Choose Account</label>
            <select class="form-control" required>
                <option>--select--</option>
                <option></option>
            </select>
        </div>
        <div class="form-group">
            <label>Choose Buildings to Pay this Charge</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="" />
                <label>Select All</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="" />
                <label>Select All</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Service Charge</button>
    </form>

    <div></div>
</div>
